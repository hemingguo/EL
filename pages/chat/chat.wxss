/* pages/chat/chat.wxss */
/*顶部导航栏*/
.custom-capsule {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.custom-capsule__icon {
    flex: 1;
    position: relative;
}

.custom-capsule__icon+.custom-capsule__icon:before {
    content: '';
    display: block;
    position: absolute;
    left: -1px;
    top: 50%;
    transform: translateY(-50%);
    width: 1px;
    height: 36rpx;
    background: #ffffff;
}

/*顶部导航栏*/
.TabBar {
    position: absolute;
    width: 751rpx;
    height: 112rpx;
    bottom: 30rpx;
}

.chat-history {
    height: 80vh;
    overflow-y: scroll;
}

.message {
    margin-bottom: 10px;
    padding: 5px;
    border-radius: 5px;
}

.user {
    background-color: #eef1f4;
    align-self: flex-start;
}

.bot {
    background-color: #f2f9fc;
    align-self: flex-end;
}

.input-container {

    align-items: center;
    padding: 66rpx;

}

.user-input {
    flex: 1;
    padding: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-right: 10px;
}

.send-button {
    background-color: #2d8cf0;
    color: #fff;
    padding: 5px 10px;
    border: none;
    border-radius: 5px;
}